<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.MainActivity">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/IP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text=""
            android:hint="IP address"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/Port"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text=""
            android:hint="Port number"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/Connect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Connect"
            />

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/JoystickAndThrottle"
        tools:context=".Views.Joystick"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="35dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="175dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        >
        <LinearLayout
            tools:context=".Views.Joystick"
            android:id="@+id/JoystickSize"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp">
            <com.example.ourapp.Views.Joystick
                android:id="@+id/Joystick"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
            </com.example.ourapp.Views.Joystick>

        </LinearLayout>

        <VerticalSeekBar
            android:id="@+id/SeekBarThrottle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:max="100"
            android:progress="0"
            >
        </VerticalSeekBar>
    </RelativeLayout>

    <SeekBar
        android:id="@+id/seekBarRudder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="655dp"
        android:progress="100"
        android:max="200"
        >
    </SeekBar>

</RelativeLayout>